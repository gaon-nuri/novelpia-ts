//- Parameters
//- novelName, g_search_text, g_page

.basic-modal-background#novel_search_modal
    .basic-modal-wrapper(style="max-width: 450px;")
        .basic-modal-top(
            style={
                "border-bottom": "1px solid #DDD",
                "margin-bottom": "20px",
                "padding-bottom": "11px"
            }
        )
            .basic-modal-name(
                style={
                    "text-align": "left",
                    "font-size": "16px",
                    "font-weight": "600"
                }
            ) 검색
            .basic-modal-close
        .basic-modal-contents
            .input-group(style={"margin-bottom": "30px", "gap": "5px"})
                input#search_txt.form-control(
                    type="form-contrl",
                    style={
                        "width": "100%",
                        "border": "1px solid #DDD",
                        "padding": "9px 15px",
                        "font-size": "14px"
                    },
                    placeholder="작품명, 작가명을 검색하세요",
                    value=novelName
                )
                .input-group-append
                    button#novel_search_btn.btn.text-white(
                        type="button", style={"background": "black"}
                    ) 검색
            div(style={"margin-bottom": "12px", "font-size": "15px"})
                b.novel_seach_txt(
                    style={"color": "#5032df"}
                ) `#{g_search_text} 검색 결과입니다.`
            .row(style="margin-bottom: 12px;")
                .col-4(
                    style={
                        "font-size": "16px",
                        "font-weight": "500",
                        "padding-top": "5px;"
                    }
                ) 검색 결과
            #novel_list_content(
                style={
                    "background-color": "gray(246)",
                    "height": "500px",
                    "overflow-x": "hidden",
                    "overflow-y": "auto",
                    "padding": "16px"
                }
            )
                //- 검색 결과 목록이 여기에 동적으로 추가됩니다.
            .row(style="margin-top: 10px;")
                .col-12.text-center
                    span
                        button.prev_btn.btn.btn-xs.btn-default(type="button") 이전
                        span(
                            style={
                                "padding": "0 10px",
                                "font-size": "14px",
                                "font-weight": "500"
                            }
                        )
                            span#page_idx `#{g_page} PAGE`
                        button.next_btn.btn.btn-xs.btn-default(type="button") 다음